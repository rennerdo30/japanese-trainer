[
  {
    "id": "grammar-1",
    "title": "です (desu)",
    "jlpt": "N5",
    "explanation": "です is a copula (linking verb) meaning 'to be'. It is used to make polite statements and questions.",
    "examples": [
      {
        "japanese": "私は学生です",
        "english": "I am a student",
        "audioUrl": "/audio/grammar/8ea040a6.mp3"
      },
      {
        "japanese": "これは本です",
        "english": "This is a book",
        "audioUrl": "/audio/grammar/d7128703.mp3"
      }
    ],
    "patterns": [
      "Noun + です"
    ],
    "exercises": [
      {
        "type": "fill-blank",
        "question": "私は___です。",
        "options": [
          "学生",
          "本",
          "大きい"
        ],
        "correct": 0
      }
    ]
  },
  {
    "id": "grammar-2",
    "title": "が particle",
    "jlpt": "N5",
    "explanation": "が marks the subject of a sentence. It is used to introduce new information or emphasize the subject.",
    "examples": [
      {
        "japanese": "私が学生です",
        "english": "I am a student (emphasizing 'I')",
        "audioUrl": "/audio/grammar/4ddefeec.mp3"
      },
      {
        "japanese": "雨が降っています",
        "english": "It is raining",
        "audioUrl": "/audio/grammar/f15136c9.mp3"
      }
    ],
    "patterns": [
      "Subject + が + Verb"
    ],
    "exercises": [
      {
        "type": "fill-blank",
        "question": "私___学生です。",
        "options": [
          "は",
          "が",
          "を"
        ],
        "correct": 1
      }
    ]
  },
  {
    "id": "grammar-3",
    "title": "を particle",
    "jlpt": "N5",
    "explanation": "を marks the direct object of a verb. It indicates what receives the action of the verb.",
    "examples": [
      {
        "japanese": "本を読む",
        "english": "to read a book",
        "audioUrl": "/audio/grammar/33dc68fe.mp3"
      },
      {
        "japanese": "水を飲む",
        "english": "to drink water",
        "audioUrl": "/audio/grammar/43a077d4.mp3"
      }
    ],
    "patterns": [
      "Object + を + Verb"
    ],
    "exercises": [
      {
        "type": "fill-blank",
        "question": "本___読む",
        "options": [
          "は",
          "が",
          "を"
        ],
        "correct": 2
      }
    ]
  },
  {
    "id": "grammar-4",
    "title": "に particle (direction)",
    "jlpt": "N5",
    "explanation": "に indicates direction or destination. It shows where someone or something is going.",
    "examples": [
      {
        "japanese": "学校に行く",
        "english": "to go to school",
        "audioUrl": "/audio/grammar/b7511e60.mp3"
      },
      {
        "japanese": "日本に来る",
        "english": "to come to Japan",
        "audioUrl": "/audio/grammar/20097d31.mp3"
      }
    ],
    "patterns": [
      "Place + に + Movement Verb"
    ],
    "exercises": [
      {
        "type": "fill-blank",
        "question": "学校___行く",
        "options": [
          "は",
          "に",
          "を"
        ],
        "correct": 1
      }
    ]
  },
  {
    "id": "grammar-5",
    "title": "て form",
    "jlpt": "N5",
    "explanation": "The て form is used to connect verbs, make requests, and express ongoing actions.",
    "examples": [
      {
        "japanese": "食べてください",
        "english": "Please eat",
        "audioUrl": "/audio/grammar/3dda9f40.mp3"
      },
      {
        "japanese": "本を読んでいます",
        "english": "I am reading a book",
        "audioUrl": "/audio/grammar/e76385f5.mp3"
      }
    ],
    "patterns": [
      "Verb (て form) + ください",
      "Verb (て form) + います"
    ],
    "exercises": [
      {
        "type": "fill-blank",
        "question": "本を読___ください",
        "options": [
          "む",
          "んで",
          "みる"
        ],
        "correct": 1
      }
    ]
  },
  {
    "id": "grammar-6",
    "title": "〜てみる",
    "jlpt": "N4",
    "explanation": "〜てみる means 'to try doing something' or 'to see what happens when you do something'.",
    "examples": [
      {
        "japanese": "この本を読んでみる",
        "english": "I'll try reading this book",
        "audioUrl": "/audio/grammar/63140b3d.mp3"
      },
      {
        "japanese": "食べてみてください",
        "english": "Please try eating it",
        "audioUrl": "/audio/grammar/8d18104f.mp3"
      }
    ],
    "patterns": [
      "Verb (て form) + みる"
    ],
    "exercises": [
      {
