[
  {
    "id": "ko-grammar-1",
    "title": "이에요/예요 (to be)",
    "level": "TOPIK1",
    "explanation": "이에요/예요 is the polite copula meaning 'to be'. Use 이에요 after consonants and 예요 after vowels.",
    "examples": [
      {
        "korean": "저는 학생이에요",
        "english": "I am a student"
      },
      {
        "korean": "이것은 책이에요",
        "english": "This is a book"
      },
      {
        "korean": "제 친구예요",
        "english": "It's my friend"
      }
    ],
    "patterns": [
      "Noun + 이에요 (after consonant)",
      "Noun + 예요 (after vowel)"
    ],
    "exercises": [
      {
        "type": "fill-blank",
        "question": "저는 선생님___.",
        "options": [
          "이에요",
          "예요",
          "입니다"
        ],
        "correct": 0
      }
    ]
  },
