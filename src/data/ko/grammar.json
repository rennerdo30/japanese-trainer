        "korean": "먹다 → 먹어요",
        "english": "to eat → I eat"
      },
      {
        "korean": "하다 → 해요",
        "english": "to do → I do"
      }
    ],
    "patterns": [
      "Verb stem + 아요 (after ㅏ, ㅗ)",
      "Verb stem + 어요 (after other vowels)",
      "하다 → 해요"
    ],
