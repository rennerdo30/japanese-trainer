  "grammar": [
    {
      "id": "en-grammar-a2-1",
      "title": "Past Simple vs Past Continuous",
      "level": "A2",
      "explanation": "Use Past Simple for completed actions and Past Continuous for actions in progress at a specific time. The Past Continuous often sets the background scene for a Past Simple action.",
      "examples": [
        { "sentence": "I was cooking when the phone rang.", "translation": "Cooking was in progress, then the phone rang (interruption)" },
        { "sentence": "While they were sleeping, it started to snow.", "translation": "Sleeping was the background action, snow starting was the event" },
        { "sentence": "She walked to work yesterday.", "translation": "Completed action - Past Simple" }
      ],
      "patterns": [
        "Subject + was/were + verb-ing (Past Continuous)",
        "Subject + verb-ed / irregular past (Past Simple)",
        "While + Past Continuous, Past Simple",
        "Past Continuous + when + Past Simple"
      ],
      "exercises": [
        { "type": "fill-blank", "question": "I ___ (watch) TV when she arrived.", "options": ["watched", "was watching", "am watching"], "correct": 1 },
        { "type": "fill-blank", "question": "They ___ (play) football at 5 PM yesterday.", "options": ["played", "were playing", "play"], "correct": 1 },
        { "type": "fill-blank", "question": "While we ___ (wait), the bus finally came.", "options": ["waited", "were waiting", "wait"], "correct": 1 }
      ]
    },
    {
      "id": "en-grammar-a2-2",
      "title": "Present Perfect (Experience & Recent Past)",
      "level": "A2",
      "explanation": "Use Present Perfect to talk about life experiences (without specific time) or recent events with a connection to now. Use 'ever', 'never', 'already', 'yet', 'just' as time markers.",
      "examples": [
        { "sentence": "I have visited Paris twice.", "translation": "Life experience - when is not important" },
        { "sentence": "Have you ever eaten sushi?", "translation": "Asking about experience at any time in life" },
        { "sentence": "She has just finished her homework.", "translation": "Very recent action, connected to now" }
      ],
      "patterns": [
        "Subject + have/has + past participle",
        "Have/Has + subject + ever + past participle?",
        "Subject + have/has + never + past participle",
        "Subject + have/has + just/already/yet + past participle"
      ],
      "exercises": [
        { "type": "fill-blank", "question": "I have never ___ a helicopter.", "options": ["fly", "flew", "flown"], "correct": 2 },
        { "type": "fill-blank", "question": "___ you ever been to Japan?", "options": ["Did", "Have", "Are"], "correct": 1 },
        { "type": "fill-blank", "question": "She has already ___ the report.", "options": ["finish", "finished", "finishing"], "correct": 1 }
      ]
    },
    {
      "id": "en-grammar-a2-3",
      "title": "Comparatives and Superlatives",
      "level": "A2",
      "explanation": "Use comparatives (-er / more + adj) to compare two things. Use superlatives (-est / most + adj) to compare three or more things. Short adjectives add -er/-est; long adjectives use more/most.",
      "examples": [
        { "sentence": "Tokyo is bigger than Paris.", "translation": "Comparing two cities" },
        { "sentence": "This is the most expensive restaurant in town.", "translation": "Comparing all restaurants" },
        { "sentence": "My coffee is hotter than yours.", "translation": "Comparing two things" }
      ],
      "patterns": [
        "Short adj + -er + than (taller, bigger, happier)",
        "more + long adj + than (more beautiful, more expensive)",
        "the + short adj + -est (the tallest, the biggest)",
        "the most + long adj (the most beautiful)"
      ],
      "exercises": [
        { "type": "fill-blank", "question": "This book is ___ than that one.", "options": ["interesting", "more interesting", "most interesting"], "correct": 1 },
        { "type": "fill-blank", "question": "She is the ___ student in the class.", "options": ["smart", "smarter", "smartest"], "correct": 2 },
        { "type": "fill-blank", "question": "My house is ___ than yours.", "options": ["old", "older", "oldest"], "correct": 1 }
      ]
    },
    {
      "id": "en-grammar-a2-4",
      "title": "Future with Will",
      "level": "A2",
      "explanation": "Use 'will' for spontaneous decisions, promises, predictions, and offers. 'Will' expresses future actions decided at the moment of speaking.",
      "examples": [
        { "sentence": "I'll help you carry those bags.", "translation": "Spontaneous offer" },
        { "sentence": "It will rain tomorrow.", "translation": "Prediction about the future" },
        { "sentence": "I promise I won't be late.", "translation": "Making a promise" }
      ],
      "patterns": [
        "Subject + will + base verb",
        "Subject + will not (won't) + base verb",
        "Will + subject + base verb?",
        "I think/believe + subject + will + base verb"
      ],
      "exercises": [
        { "type": "fill-blank", "question": "Don't worry, I ___ call you later.", "options": ["am", "will", "going to"], "correct": 1 },
        { "type": "fill-blank", "question": "___ you help me with this?", "options": ["Are", "Do", "Will"], "correct": 2 },
        { "type": "fill-blank", "question": "I think it ___ be sunny tomorrow.", "options": ["will", "is", "was"], "correct": 0 }
      ]
    },
    {
      "id": "en-grammar-a2-5",
      "title": "Future with Going To",
      "level": "A2",
      "explanation": "Use 'going to' for planned intentions and predictions based on present evidence. Unlike 'will', 'going to' shows the decision was made before speaking.",
      "examples": [
        { "sentence": "I'm going to visit my parents next weekend.", "translation": "Planned intention - decided before now" },
